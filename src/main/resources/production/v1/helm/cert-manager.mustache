nodeSelector:
  "eks.amazonaws.com/nodegroup": {{deployment:id}}-core-node

replicaCount: 2

installCRDs: true

resources:
  requests:
    cpu: 50m
    memory: 64Mi
  limits:
    cpu: 200m
    memory: 256Mi

podDisruptionBudget:
  enabled: true
  minAvailable: 1

webhook:
  replicaCount: 2
  nodeSelector:
    "eks.amazonaws.com/nodegroup": {{deployment:id}}-core-node
  resources:
    requests:
      cpu: 50m
      memory: 32Mi
    limits:
      cpu: 100m
      memory: 64Mi
  podDisruptionBudget:
    enabled: true
    minAvailable: 1

cainjector:
  replicaCount: 2
  nodeSelector:
    "eks.amazonaws.com/nodegroup": {{deployment:id}}-core-node
  resources:
    requests:
      cpu: 50m
      memory: 64Mi
    limits:
      cpu: 200m
      memory: 256Mi
  podDisruptionBudget:
    enabled: true
    minAvailable: 1

prometheus:
  enabled: true
  servicemonitor:
    enabled: false
